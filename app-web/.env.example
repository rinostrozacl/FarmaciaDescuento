# Variables de entorno para FarmaciaDescuento - PLANTILLA
# Copiar este archivo a .env.local y configurar con valores reales
# NUNCA subir archivos .env con valores reales a repositorios

# Firebase
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Resend (Email)
RESEND_API_KEY=

# Sentry (Monitoreo de errores)
SENTRY_DSN=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Transbank (Opcional - para pagos)
TRANSBANK_COMMERCE_CODE=
TRANSBANK_API_KEY=

# Configuración de la aplicación
APP_URL=https://farmaciadescuento.cl
APP_NAME=FarmaciaDescuento
APP_ENVIRONMENT=development # development, staging, production
APP_DEBUG=true

# Configuración de API
API_BASE_URL=https://us-central1-descuentofarmacia.cloudfunctions.net
API_TIMEOUT=30000

# Configuración de caché
CACHE_LIFETIME_PRODUCTS=300 # 5 minutos en segundos
CACHE_LIFETIME_CATEGORIES=86400 # 24 horas en segundos
CACHE_LIFETIME_GEOLOCATION=3600 # 1 hora en segundos

# Configuración de notificaciones
NOTIFICATION_DEFAULT_ICON=/icons/notification-icon.png
FCM_VAPID_KEY=
