    freeDelivery: false,
  },
  {
    id: "105",
    name: "Paracetamol 500mg 20 comprimidos",
    brand: "Laboratorio Chile",
    category: "Analg√©sicos",
    regularPrice: 3990,
    discountPercentage: 25,
    imageUrl: "",
    pharmacyName: "Farmacia Econ√≥mica",
    pharmacyId: "205",
